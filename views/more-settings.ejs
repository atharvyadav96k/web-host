                    <div class="modal-header">
                        <h5 class="modal-title text-warning">WANNING</h5>
                        <button type="button" class="btn-close" onclick="closeModel()"></button>
                    </div>
                    <div class="modal-body">
                        <p class="text-primary">This action will permanently delete this website</p>
                    </div>
                    <div class="modal-footer">
                       
                        <button type="button" class="btn btn-secondary" onclick="closeModel()" >Close</button>
                        <form action="/delete/<%= websiteName %>" method="post">
                            <input type="submit" value="delete" class="btn btn-danger">
                        </form>
                    </div>
                </div>
            </div>

